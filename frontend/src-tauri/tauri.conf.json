{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Money Flow",
  "version": "1.0.0",
  "identifier": "com.moneyflow.app",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "TAURI_PLATFORM=android yarn generate"
  },
  "app": {
    "windows": [
      {
        "title": "Money Flow - 個人財務管理",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' https://personal-finance-manager-266039927960.asia-east1.run.app; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'; img-src 'self' data: https:; font-src 'self' data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
