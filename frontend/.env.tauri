# Tauri Android 開發環境變數
# 此檔案用於設定 Android SDK 和 NDK 路徑

export ANDROID_HOME="/home/a9293340/money-flow/frontend/android-sdk"
export NDK_HOME="$ANDROID_HOME/ndk/26.1.10909125"
export PATH="$PATH:$ANDROID_HOME/latest/cmdline-tools/bin:$ANDROID_HOME/platform-tools"

# 載入 Rust 環境（如果存在）
if [[ -f ~/.cargo/env ]]; then
    source ~/.cargo/env
fi

# 使用方式: 
# source .env.tauri
# 或在 ~/.bashrc 中加入: source /full/path/to/.env.tauri